def get_value(text):
    while True:
        value=float(input(text))
        if 1<=value<=100:
            return value
        else: print("Please enter a valid number! value must be from 1 to 100 including")

a=get_value("Enter a value (value must be from 1 to 100 including)")
b=get_value("Enter b value (value must be from 1 to 100 including)")

if a < b:
    r=(b/a-1)
elif a == b:
    r=-295
else:
    r=(a-235)/b
print("result of calculating an expression:", r)
